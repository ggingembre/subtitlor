<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Subtitlor</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>EditSubtitle</servlet-name>
    <servlet-class>com.subtitlor.servlets.EditSubtitle</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Translate</servlet-name>
    <servlet-class>com.subtitlor.servlets.Translate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>WriteToFile</servlet-name>
    <servlet-class>com.subtitlor.servlets.WriteToFile</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Upload</servlet-name>
    <servlet-class>com.subtitlor.servlets.Upload</servlet-class>
       	<multipart-config>
            <location>C:\Users\Guillaume Gingembre\IdeaProjects\UploadFormExample\src\com\octest\resources\temp\</location> <!-- dossier temporaire de stockage -->
            <max-file-size>10485760</max-file-size> <!-- 10Mo (en octet) -->
            <max-request-size>52428800</max-request-size> <!-- 5*10Mo (ensemble de toutes les données du formulaire-->
            <file-size-threshold>1048576</file-size-threshold> <!-- 1Mo (à partir de quelle taill on doit stocker les fichiers dans ce dossier-->
        </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditSubtitle</servlet-name>
    <url-pattern>/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Translate</servlet-name>
    <url-pattern>/translate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WriteToFile</servlet-name>
    <url-pattern>/tofile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Upload</servlet-name>
    <url-pattern>/upload/*</url-pattern>
  </servlet-mapping>
</web-app>